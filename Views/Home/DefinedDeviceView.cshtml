@model IEnumerable<Climate_Watch.Models.DeviceModel>
@{
    ViewData["Title"] = "Devices";
}

<h2>Devices</h2>
<h1></h1>
<table class="table" style="margin-top: 10px">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Auth_Status</th>
        <th>Running_Status</th>
        <th>Created_At</th>
        <th>Updated_At</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Auth_Status</td>
            <td>@item.Running_Status</td>
            <td>@item.Created_At</td>
            <td>@item.Updated_At</td>
        </tr>
    }
    </tbody>
</table>



<div id="sensorModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sensors</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="sensorModalBody">
            </div>
        </div>
    </div>
</div>

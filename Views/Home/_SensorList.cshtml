@model IEnumerable<Climate_Watch.Models.SensorModel>

<table class="table">
    <thead>
        <tr>
            <th>Sensor Name</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sensor in Model)
        {
            <tr>
                <td>@sensor.SensorName</td>
                <td>
                    <input type="checkbox" data-sensor-id="@sensor.SensorName" @(sensor.State ? "checked" : "") />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary" onclick="saveSensors()">OK</button>
</div>
